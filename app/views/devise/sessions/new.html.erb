 <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

 

  <div class="pianist-content">
   <div class="heading-content">
     <h2 class="heading-name">Login<br>ログイン</h2>
    </div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    

    <div class="mail-form">
      <label class="form-text">メールアドレス 必須</label>
      <!--input type="text" placeholder="PC or 携帯" class="small-field"-->
      <%= f.email_field :email, class:"small-field", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="password-form">
      <label class="form-text">パスワード 必須</label>
      <p class="info-text">※英字と数字の両方を含めて設定してください</p>
      <!--input type="text" placeholder="6文字以上の半角英数字" class="small-field"-->
      <%= f.password_field :password, class:"small-field", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>


    <div class="registration-click">
    <!--input type="submit" value="ログイン" class="registration"-->
    <%= f.submit "ログイン" ,class:"registration" %>
    </div>
</div>
</div>
<% end %>
  

